<section id="signUp">
    <div class="container">
    <h1>Sign Up</h1>

    {{!Display the "signup" form}}
    <form method="post" action="/customer/signup">
        <table>
          <tr>
            <td>Given Name:&nbsp;</td>
            <td> <input placeholder="Given Name" name='nameGiven' id='nameGiven' value=""/></td>
          </tr>
          <tr>
            <td>Family Name:&nbsp;</td>
            <td><input placeholder="Family Name"  name='nameFamily' id='nameFamily' value=""/></td>
          </tr>
          <tr>
            <td>Email:&nbsp;</td>
            <td><input placeholder="Email" name='email' id='email' value=""/></td>
          </tr>
          <tr>
            <td>Password:&nbsp;</td>
            <td><input placeholder="Password" type="password" name='password' id='password' value=""/></td>
          </tr>
          <tr>
            <td colspan="2"><center><input type="submit" value="Sign Up"></center></td>
          </tr>
        </table>
    </form>
    </div>
</section>