<section id="snacksMenu">
    <h1> Menu List</h1>
    <form method="post" action="/search">
    </form>
    <div class="snacks-menu">
        <div class="row">
            {{#each snacks}}
            <div class="snack">
                <div class="snack-img">
                    <a href="/customer/snacks/{{this.name}}"><img src="https://source.unsplash.com/{{this.photo}}"></a>
                </div>

                <div class="snack-body">
                    <h2 class="snack-name">
                        <a href="/customer/snacks/{{this.name}}">{{this.name}}</a>
                        </p>
                    </h2>

                    <div class="snack-price">
                        <span class="price">${{this.price}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
</section>