<section id="OrderDetails">
    <h1>Order History</h1><br>
    <table>
        <tr>
            <th>Order ID</th>
            <th>Items</th>
            <th>Order time</th>
            <th>Status</th>
        </tr>
        {{#each thisOrder}}
            <tr>
                <td> {{this._id}}</td>
                <td> 

                {{#each items}}
                    {{#if this.quantity}}
                    <p>{{this.quantity}}x{{this.snackId.name}}</p>
                    {{/if}}
                {{/each}}
                </td>
                <td> {{this.time_ordered}}</td>
                <td>{{#if this.fulfilled}}Fulfilled{{else}}Outstanding{{/if}}</td>
            </tr>

        {{/each}}
        </table>
</section>