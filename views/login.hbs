<section id="login">
    <h1>Login</h1>
    <form method="post" action="/customer/login">
    
    <div class="container">
        
        <label for="email">Email</label>
        <input type="email" size="10" name='email' id='email' placeholder="Email" pattern="[\.0-9A-Za-z]+@[\.A-Za-z]+">
        <label for="password">Password</label>
        <input type="password" size="10" name='password' id='password' placeholder="Password">
        <input type="submit" value="Submit">
        <p>Don't have an account? <a href="/customer/signup">Sign Up</a></p>
    </div>
    </form>
</section>
{{#if message}}
<div class="bg-modal">
    <div class="modal-content">
        <div class="close">&times;</div>
        <div><img src="https://i.imgur.com/tZ47M5M.png" width="150px" height="140px"></div>
        <div>{{message}}</div>
    </div>
</div>
{{/if}}
<script>
    document.querySelector('.close').addEventListener('click', function() {
        document.querySelector('.bg-modal').style.display='none';
    });
</script>