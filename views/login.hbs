<section id="login">
    <form method="post" action="/customer/login">
    <div class="container">
        <h1>Login</h1>
        <label for="email">Email</label>
        <input type="email" size="10" name='email' id='email' placeholder="Email" pattern="[\.0-9A-Za-z]+[@]{1}[\.A-Za-z]+">
        <label for="password">Password</label>
        <input type="password" size="10" name='password' id='password' placeholder="Password" pattern="[0-9A-Za-z]+">
        <input type="submit" value="Submit">
        <p>Don't have an account? <a href="/customer/signup">Sign Up</a></p>
    </div>
    </form>
</section>
